{
  "include": [
    "./i18n/**/*",
    "./plugins/**/*",
    "./src/**/*",
    "./utils/**/*"
  ],
  "compilerOptions": {
    "target": "es2020",
    "module": "es2020",
    "moduleResolution": "node",
    "allowJs": true,
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "types": [
      "node",
      "jest",
      "@testing-library/jest-dom"
    ]
  }
}